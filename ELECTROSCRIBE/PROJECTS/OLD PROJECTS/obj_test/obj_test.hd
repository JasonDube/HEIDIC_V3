// OBJ Loader Test Project
// Tests MeshResource class - loads OBJ files and renders 3D meshes

extern fn heidic_glfw_vulkan_hints(): void;
extern fn heidic_init_renderer_obj_mesh(window: GLFWwindow, objPath: string, texturePath: string): i32;
extern fn heidic_render_obj_mesh(window: GLFWwindow): void;
extern fn heidic_cleanup_renderer_obj_mesh(): void;
extern fn heidic_sleep_ms(milliseconds: i32): void;

fn main(): void {
    print("=== OBJ Loader Test ===\n");
    print("Tests MeshResource class with OBJ file loading\n");
    print("Initializing GLFW...\n");

    let init_result: i32 = glfwInit();
    if init_result == 0 {
        print("Failed to initialize GLFW!\n");
        return;
    }

    print("GLFW initialized.\n");
    heidic_glfw_vulkan_hints();
    
    print("Creating window (800x600)...\n");
    let window: GLFWwindow = glfwCreateWindow(800, 600, "OBJ Loader Test", 0, 0);
    if window == 0 {
        print("Failed to create window!\n");
        glfwTerminate();
        return;
    }

    print("Window created.\n");
    print("Initializing OBJ mesh renderer...\n");
    print("MeshResource will load OBJ file and create GPU buffers!\n");

    // Load OBJ mesh from models folder with texture
    // Using eve_1.obj model with eve_tex.png texture
    let renderer_init: i32 = heidic_init_renderer_obj_mesh(window, "models/eve_1.obj", "textures/eve_tex.png");
    if renderer_init == 0 {
        print("Failed to initialize OBJ mesh renderer!\n");
        print("Make sure models/eve_1.obj and textures/eve_tex.png exist!\n");
        glfwDestroyWindow(window);
        glfwTerminate();
        return;
    }

    print("OBJ mesh renderer initialized!\n");
    print("Starting render loop...\n");
    print("You should see a 3D mesh rendered!\n");
    print("Press ESC or close the window to exit.\n");

    while glfwWindowShouldClose(window) == 0 {
        glfwPollEvents();

        if glfwGetKey(window, 256) == 1 { // ESC key
            glfwSetWindowShouldClose(window, 1);
        }

        heidic_render_obj_mesh(window);
        heidic_sleep_ms(16); // ~60 FPS cap
    }

    print("Cleaning up...\n");
    heidic_cleanup_renderer_obj_mesh();
    glfwDestroyWindow(window);
    glfwTerminate();
    print("Done!\n");
}