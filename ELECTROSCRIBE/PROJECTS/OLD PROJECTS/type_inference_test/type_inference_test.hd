fn test_array_literal_inference(): void {
    // Array literal type inference - should infer [i32]
    let numbers = [1, 2, 3, 4, 5];
    
    // Array literal with floats - should infer [f32]
    let floats = [1.0, 2.5, 3.14];
    
    // Array literal with mixed types should error
    // let mixed = [1, 2.0];  // This should error
    
    // Empty array should require explicit type
    // let empty = [];  // This should error - need explicit type
    let empty: [i32] = [];
}

